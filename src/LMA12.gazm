                ldy    proc.d2,U
                ldd    [proc.d4,U]             ; TARGET ALIVE?
                beq    LNDSAA
                lda    OCVECT+1,Y
                cmpa   #ASTKIL&$FF
                bne    LNDSAA                  ; ORBIT
                lda    OX16,X
                anda   #$FC
                sta    XTEMP
                lda    OX16,Y
                anda   #$FC
                cmpa   XTEMP                  ; CLOSE?
                beq    LANDG0                  ; GET IM
                bra    LANDSA
